{
  "name": "e-commerce-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "Apache-2.0",
  "scripts": {
    "start": "tsnd --transpile-only --respawn --ignore-watch node-modules src/server.ts",
    "build": "rimraf ./build && tsc",
    "dev": "ts-node-dev --respawn --transpile-only --inspect -- ./src/server.ts",
    "lint": "eslint --fix --ext .js,.ts,.json .",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --quiet --fix",
      "git add"
    ],
    "*.{json,md,html}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.10",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^6.0.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.2",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@types/express": "^4.17.9",
    "express": "^4.17.1",
    "http-status-codes": "^2.1.4",
    "ts-node-dev": "^1.0.0"
  }
}
